
<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center"><b><h2>Edit <%= resource_name.to_s.humanize %></h2>
</b></h5>
              <div class="form-label-group">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

 <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true,  class:'w-100 mb-1 rounded',placeholder:'enter your username' %>
  </div>

    <div class="form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autocomplete: "first_name", autofocus: true, class:'w-100 rounded'%>
  </div>

  <div class="form-group">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autocomplete: "last_name", autofocus: true, class:'w-100  rounded'%>
  </div>
 
  <div class="actions">
    <%= f.submit "Update Profile", class:"btn btn-sm btn-primary" %> 
    <%= link_to "Change Password", :edit_user_password, class:"btn btn-sm btn-primary" %> 
  </div>
<% end %>

<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class:"btn btn-sm btn-warning mt-2" %>
<%= link_to "Back to Home", :back %> <br/>




            
          </div>
        </div>
      </div>
    </div>
  </div>