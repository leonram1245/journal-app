
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center"><b>Sign In</b></h5>
              <div class="form-label-group">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'w-100 mb-2 rounded',placeholder:'enter your email' %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password" , class:'w-100 rounded ',placeholder:'enter your password'%>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="form-check">
      <%= f.check_box :remember_me, class:'form-check-input '%>
      <%= f.label :remember_me,class:'form-check-label mb-2' %>
    </div>
  <% end %>
 <div class="actions">
 <%= f.submit "Log in",class:"btn btn-sm btn-primary btn-block text-uppercase"%>
  </div>
  <%= render "devise/shared/links" %>

<% end %>

          </div>
        </div>
      </div>
    </div>
  </div>