
<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Forgot your Password?</h5>
            <form class="form-signin">
              <div class="form-label-group">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'w-100 mb-1 rounded' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions",class:"btn btn-sm btn-primary btn-block text-uppercase" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


              
  </form>


          </div>
        </div>
      </div>
    </div>
  </div>