<%= simple_form_for [@task.category,@task] do |f| %>

<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center"><b>Create a Task</b></h5>
              <div class="form-label-group">
  <div class="form-group">
  <%= f.input :title,  label:'title', class: 'w-100 mb-2 rounded'  %>
  </div>
  <div class="form-group">
  <%= f.input :description,as: :text,  label:'description', class: 'w-100 mb-2 rounded'  %>
  </div>
  <div class="form-group">
  <%= f.text_field :deadline, label:'deadline', class: 'w-100 mb-2 rounded', placeholder:"enter desired date",
   data: {
      controller: "flatpickr",
      flatpickr_date_format: "Y-m-d",
      flatpickr_min_date: Time.zone.now
    } 

    %>
  </div>
 <div class="actions">
 <%= f.button :submit,class:"btn btn-sm btn-primary btn-block text-uppercase" %>
  </div>
 <%=link_to 'back to Home',:back%>

          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
